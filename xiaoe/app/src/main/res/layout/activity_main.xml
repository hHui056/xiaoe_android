<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.beidouapp.xiaoe.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18.75"
        android:background="@drawable/first_page_background"
        android:clipToPadding="true"
        android:fitsSystemWindows="true">

        <Button
            android:id="@+id/btn_wifi_setting"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_above="@+id/img_device"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/wifi_setting"
            android:paddingLeft="10dp"
            android:text="配置wifi"
            android:textColor="@android:color/white"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/img_device"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:src="@drawable/first_page_device_icon" />

        <TextView
            android:id="@+id/txt_device_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:text="设备状态"
            android:textColor="@android:color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="47.12"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <com.beidouapp.xiaoe.view.OptionView
                android:id="@+id/opt_wenshidu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </com.beidouapp.xiaoe.view.OptionView>

            <com.beidouapp.xiaoe.view.OptionView
                android:id="@+id/opt_daqiya"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

            </com.beidouapp.xiaoe.view.OptionView>

            <com.beidouapp.xiaoe.view.OptionView
                android:id="@+id/opt_yuyinkongzhi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

            </com.beidouapp.xiaoe.view.OptionView>

            <com.beidouapp.xiaoe.view.OptionView
                android:id="@+id/opt_qunzuguanli"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

            </com.beidouapp.xiaoe.view.OptionView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:orientation="vertical">

            <com.beidouapp.xiaoe.view.OptionView
                android:id="@+id/opt_keshijiaohu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            </com.beidouapp.xiaoe.view.OptionView>

            <com.beidouapp.xiaoe.view.OptionView
                android:id="@+id/opt_duocaidengguang"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

            </com.beidouapp.xiaoe.view.OptionView>

            <com.beidouapp.xiaoe.view.OptionView
                android:id="@+id/opt_yuyinliuyan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

            </com.beidouapp.xiaoe.view.OptionView>

            <com.beidouapp.xiaoe.view.OptionView
                android:id="@+id/opt_shujutouchuan"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

            </com.beidouapp.xiaoe.view.OptionView>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
