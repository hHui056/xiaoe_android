<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.beidouapp.xiaoe.activity.VoiceControlActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="18.75"
        android:background="@color/title_background"
        android:clipToPadding="true"
        android:fitsSystemWindows="true">

        <com.beidouapp.xiaoe.view.MyTitle
            android:id="@+id/title_yuyinkongzhi"
            android:layout_width="match_parent"
            android:layout_height="30dp">

        </com.beidouapp.xiaoe.view.MyTitle>

        <ImageView
            android:id="@+id/img_yyy"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/title_yuyinkongzhi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:src="@drawable/yuyinkongzhi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_yyy"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/yuyinkongzhi"
            android:textColor="@android:color/white" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="47.12"
        android:background="@android:color/white">

        <ListView
            android:id="@+id/list_sounds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_speak"
            android:divider="#00000000"
            android:dividerHeight="0dip"
            android:scrollbars="none"
            android:transcriptMode="alwaysScroll">


        </ListView>

        <Button
            android:id="@+id/btn_speak"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/hh_speak"
            android:text="点击说话" />
    </RelativeLayout>
</LinearLayout>
